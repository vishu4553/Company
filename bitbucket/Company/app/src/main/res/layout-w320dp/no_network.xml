<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/four">

    <android.support.v7.widget.CardView
        android:id="@+id/dialog"
        android:layout_width="@dimen/width_330"
        android:layout_height="@dimen/width_180"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_10"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="15sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/one"
            android:gravity="center"
            android:layoutAnimation="@anim/layout_dem">

            <ImageView
                android:id="@+id/closeDialogImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_cancel" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_80"
            android:fontFamily="serif-monospace"
            android:padding="@dimen/padding_5"
            android:text="You are not connected to the Internet"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18"
            android:gravity="center"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/wifi"
            android:layout_marginTop="@dimen/margin_70"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_5"/>

    </android.support.v7.widget.CardView>
</RelativeLayout>
