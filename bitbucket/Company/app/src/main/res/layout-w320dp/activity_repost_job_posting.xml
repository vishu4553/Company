<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newimage"
    tools:context=".activity.RepostJobPosting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Job Posting Details"
            android:textColor="#fff"
            android:textSize="26dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewCmpDetails"
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:layout_margin="15dp"
            android:padding="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <!--position-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_45"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Name"
                        android:textColor="#000"
                        android:textSize="28dp"
                        android:textStyle="normal" />
                </LinearLayout>

                <!--Name of company-->
                <!-- <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="15dp"
                     android:orientation="horizontal">

                     <EditText
                         android:id="@+id/cmp_name1"
                         android:layout_width="match_parent"
                         android:layout_height="@dimen/height_45"
                         android:layout_marginTop="10dp"
                         android:background="@null"
                         android:fontFamily="sans-serif-smallcaps"
                         android:text="name"
                         android:textColor="#000"
                         android:textSize="18dp"
                         android:textStyle="normal" />
                 </LinearLayout>-->
                <!--Posted On-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/one"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_45"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="Posted on      :"
                        android:textColor="#fff"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/postDt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_45"
                        android:layout_marginTop="2dp"
                        android:background="@null"
                        android:text=" "
                        android:textColor="#fff"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/margin_10"/>
                </LinearLayout>
                <!--Registrationlink-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#5DBCD2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_45"
                            android:gravity="center"
                            android:text="End Date         :"
                            android:textColor="#fff"
                            android:textSize="18dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/endDt"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_45"
                            android:layout_marginTop="2dp"
                            android:background="@null"
                            android:text=" "
                            android:textColor="#fff"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/margin_10"/>
                    </LinearLayout>
                </LinearLayout>
                <!--Drive info-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#edede9"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_40"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="2dp"
                            android:text="Technology    :"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/technology"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_40"
                            android:layout_marginTop="2dp"
                            android:text=" "
                            android:textColor="@color/black_text"
                            android:textSize="18dp"
                            android:layout_marginLeft="@dimen/margin_10"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_40"
                            android:layout_marginLeft="15dp"
                            android:text="Job Title         :"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/jobTitle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_40"
                            android:layout_marginTop="2dp"
                            android:background="@null"
                            android:text=" "
                            android:textColor="@color/black_text"
                            android:textSize="18dp"
                            android:layout_marginLeft="@dimen/margin_10"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_40"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="2dp"
                            android:text="Type                :"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_40"
                            android:layout_marginTop="2dp"
                            android:text=" "
                            android:textColor="@color/black_text"
                            android:textSize="18dp"
                            android:layout_marginLeft="@dimen/margin_10"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_40"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="2dp"
                            android:text="Vacancy          :"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/vacancy"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_40"
                            android:layout_marginTop="2dp"
                            android:text=" "
                            android:textColor="@color/black_text"
                            android:textSize="18dp"
                            android:layout_marginLeft="@dimen/margin_10"/>
                    </LinearLayout>

                   <!-- <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_45"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="2dp"
                            android:text="Other               :"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/other"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_45"
                            android:layout_marginTop="2dp"
                            android:text=" "
                            android:textColor="@color/black_text"
                            android:textSize="18dp"
                            android:layout_marginLeft="@dimen/margin_10"/>
                    </LinearLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_40"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="2dp"
                            android:text="Other               :"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/other"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_40"
                            android:layout_marginTop="2dp"
                            android:text=" "
                            android:textColor="@color/black_text"
                            android:textSize="18dp"
                            android:layout_marginLeft="@dimen/margin_10"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearRepost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/padding_10">

                <Button
                    android:id="@+id/repost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_btn"
                    android:text="Repost"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>
