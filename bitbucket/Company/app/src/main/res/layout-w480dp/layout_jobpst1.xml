<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/activity_vertical_margin"
                app:cardElevation="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--position-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cmpnyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/imageView"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Company Name"
                            android:textColor="@color/black"
                            android:textSize="26sp" />
                    </LinearLayout>

                    <!--Name of company-->
                    <!--Posted On-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/one"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_30"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:layout_toRightOf="@+id/imageView"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Posted Date      :"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/postDt"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_30"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_toRightOf="@+id/imageView"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Posted Date"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#5DBCD2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/height_30"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Job Title           :"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_18"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/jobTit"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/height_30"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Job Title"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_16" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#edede9">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_30"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_toRightOf="@+id/imageView"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Technology      :"
                            android:textSize="@dimen/text_18"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/black_text" />

                        <TextView
                            android:id="@+id/tech"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_30"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_toRightOf="@+id/imageView"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Technology"
                            android:textSize="@dimen/text_16"
                            android:textColor="@color/black_text"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_30"
                            android:layout_toRightOf="@+id/imageView"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Vacancy            :"
                            android:textSize="@dimen/text_18"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/vacancy"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_30"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_toRightOf="@+id/imageView"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Vacancy"
                            android:textSize="@dimen/text_16" />

                    </LinearLayout>
                    <!--Detail Button-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_10"
                            android:orientation="horizontal"
                            android:padding="@dimen/padding_5"
                            android:gravity="right">

                            <LinearLayout
                                android:id="@+id/linear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/details"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/padding_5"
                                    android:background="@drawable/button_detail"
                                    android:fontFamily="serif"
                                    android:text="Details"
                                    android:textColor="@color/one"
                                    android:textSize="@dimen/text_14"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <Button
                                android:id="@+id/repost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_5"
                                android:layout_marginLeft="@dimen/margin_5"
                                android:layout_toRightOf="@+id/imageView"
                                android:background="@drawable/gradient_btn"
                                android:fontFamily="serif"
                                android:text="Repost"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_14"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_gravity="bottom"
                    android:background="@color/one" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>