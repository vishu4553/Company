<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ukarsha.hub.activity.ViewProfile">

    <!-- <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         android:background="@android:color/transparent"/>-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/dem17" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-120dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_140"
            android:layout_margin="@dimen/margin_10"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="@dimen/margin_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/current_time_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="Time"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/text_18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_10"
                    android:gravity="right"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/editProf"
                        android:layout_width="@dimen/width_30"
                        android:layout_height="@dimen/height_30"
                        app:cardBackgroundColor="@color/three">
                        <!--width height 40-->

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_edit"
                            android:scaleType="fitXY" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_40"
                android:background="@null"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Company Name"
                android:textColor="@color/one"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_70"
                android:background="@null"
                android:gravity="center"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_100"
                android:background="@null"
                android:gravity="center"
                android:text="More"
                android:textColor="@color/three"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"
                android:fontFamily="sans-serif-smallcaps"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@color/one" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5"
                android:background="@color/four" />


        </android.support.v7.widget.CardView>
        <!--  </LinearLayout>-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--visible-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:layerType="software"
                        android:src="@drawable/dotted" />

                </LinearLayout>


                <com.hanks.htextview.HTextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="-30dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_10"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="15dp">


                        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin_20"
                            android:orientation="vertical"
                            android:stretchColumns="1">

                            <TableRow android:layout_marginTop="@dimen/margin_10">

                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_column="0"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:drawableLeft="@drawable/company_24"
                                    android:drawablePadding="@dimen/padding_20"
                                    android:text="@string/company_name"
                                    android:textSize="@dimen/text_18"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/edCmpyName"
                                    android:layout_height="wrap_content"
                                    android:layout_column="1"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:padding="@dimen/padding_5"
                                    android:singleLine="true" />
                            </TableRow>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="@dimen/margin_20"
                                android:background="@color/light_gray1" />

                            <TableRow android:layout_marginTop="@dimen/margin_10">

                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_column="0"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:drawableLeft="@drawable/email_24"
                                    android:drawablePadding="@dimen/padding_20"
                                    android:text="@string/email"
                                    android:textSize="@dimen/text_16"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/edEmail"
                                    android:layout_height="wrap_content"
                                    android:layout_column="1"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:padding="@dimen/padding_5"
                                    android:singleLine="true" />

                            </TableRow>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="@dimen/margin_20"
                                android:background="@color/light_gray1" />

                            <TableRow android:layout_marginTop="@dimen/margin_10">

                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_column="0"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:drawableLeft="@drawable/telephone_24"
                                    android:drawablePadding="@dimen/padding_20"
                                    android:text="@string/mobile"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/edMobile"
                                    android:layout_height="wrap_content"
                                    android:layout_column="1"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:padding="@dimen/padding_5"
                                    android:singleLine="true" />
                            </TableRow>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="@dimen/margin_20"
                                android:background="@color/light_gray1" />

                            <TableRow android:layout_marginTop="@dimen/margin_10">

                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_column="0"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:drawableLeft="@drawable/city_24"
                                    android:drawablePadding="@dimen/padding_20"
                                    android:text="City"
                                    android:textSize="@dimen/text_16"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/edCity"
                                    android:layout_height="wrap_content"
                                    android:layout_column="1"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:padding="@dimen/padding_5"
                                    android:singleLine="true" />
                            </TableRow>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="@dimen/margin_20"
                                android:background="@color/light_gray1" />

                            <TableRow android:layout_marginTop="@dimen/margin_10">

                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_column="0"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:drawableLeft="@drawable/address_24"
                                    android:drawablePadding="@dimen/padding_20"
                                    android:text="Address"
                                    android:textSize="@dimen/text_16"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/edAddress"
                                    android:layout_height="wrap_content"
                                    android:layout_column="1"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:padding="@dimen/padding_5"
                                    android:singleLine="true" />
                            </TableRow>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="@dimen/margin_20"
                                android:background="@color/light_gray1" />

                            <TableRow
                                android:layout_marginBottom="@dimen/margin_20"
                                android:layout_marginTop="@dimen/margin_10">

                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_column="0"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:drawableLeft="@drawable/website_24"
                                    android:drawablePadding="@dimen/padding_20"
                                    android:text="Website"
                                    android:textSize="@dimen/text_16"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/edWebsite"
                                    android:layout_height="wrap_content"
                                    android:layout_column="1"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:padding="@dimen/padding_5"
                                    android:singleLine="true" />
                            </TableRow>

                        </TableLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
